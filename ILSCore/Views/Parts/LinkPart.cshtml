@model List<ILS.PartListViewModel>
@{
    ViewBag.Title = "LinkPart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/assets/global/plugins/jquery.min.js")"></script>

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase"> Part List</span>
                </div>
                <div class="actions">

                </div>
            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">

                        </div>
                        <div class="col-md-6">
                            <div class="btn-group pull-right">

                                <button id="btnModalShow" class="btn sbold green">
                                    Add New
                                    <i class="fa fa-plus"></i>
                                </button>

                            </div>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover table-checkable order-column" id="sample_1">
                    <thead>
                        <tr>
                            
                            <th> Part Name </th>
                            <th> Manufacturer Name </th>
                            <th> Quantity </th>
                            <th> Type Description </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="odd gradeX">
                               
                                <td>@item.PartName</td>
                                <td>@item.ManufacturerName</td>
                                <td>@item.Quantity</td>
                                <td>@item.TypeDescription</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>


<div id="linkPart" class="modal fade" tabindex="-1" data-width="760">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <!-- BEGIN EXAMPLE TABLE PORTLET-->
                <div class="portlet light bordered">
                    <div class="portlet-title">
                        <div class="caption font-dark">
                            <i class="icon-settings font-dark"></i>
                            <span class="caption-subject bold uppercase">Available Parts</span>
                        </div>
                        <div class="actions">

                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-toolbar">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="btn-group">

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="btn-group pull-right">

                                    </div>
                                </div>
                            </div>
                        </div>

                        <table class="table table-striped table-bordered table-hover table-checkable order-column" id="sample_3">
                            <thead>
                                <tr>

                                    <th> Part Name </th>
                                    <th> Manufacturer Name </th>
                                    <th> Quantity </th>
                                    <th> Type Description </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="odd gradeX">

                                        <td>@item.PartName</td>
                                        <td>@item.ManufacturerName</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.TypeDescription</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <div class="col-md-12">

                        </div>
                        <div class="col-md-12">
                            <div class="form-group form-md-line-input form-md-floating-label">

                                <input type="number" value="1" class="form-control" id="txtNumber" />
                                <label id="lblLength" for="form_control_1">Quantity</label>
                                <span class="help-block">Please input quantity...</span>
                            </div>
                        </div>


                    </div>
                </div>
                <!-- END EXAMPLE TABLE PORTLET-->
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" id="btnPartSelected" class="btn green-meadow">
            <i class="glyphicon glyphicon-ok"> </i>Submit
        </button>
        <button type="submit" class="btn red" data-dismiss="modal">
            <i class="glyphicon glyphicon-remove"> </i>Cancel
        </button>
    </div>
</div>


<script>
    $(function () {

        $("#btnModalShow").click(function () {
            $("#linkPart").modal('show');

        });
    });
</script>